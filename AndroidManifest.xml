<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xmu.swordbearer.plugins.sinaplugin"
    android:sharedUserId="xmu.swordbearer.plugins"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sina_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".Start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="xmu.swordbearer.plugins.sinaplugin.SendWeibo" >
        </activity>
        <activity android:name="AccountInfo" >
        </activity>
        <activity android:name="FollowersActivity" >
        </activity>
        <activity android:name="PreviewActivity"></activity>
        <activity android:name="UserInfoActivity"></activity>
    </application>

</manifest><!--
