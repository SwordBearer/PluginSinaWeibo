<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/pineduser_listitem_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/pineduser_listitem_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/pineduser_listitem_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pineduser_listitem_remove"
        android:layout_toRightOf="@id/pineduser_listitem_avatar"
        android:ellipsize="end"
        android:singleLine="true" />

</RelativeLayout>