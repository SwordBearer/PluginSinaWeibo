<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/us_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg_nor"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/pineduser_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/selector_btn_back" />

        <TextView
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="@string/tlt_pineduser"
            android:textColor="#000" />

        <ImageButton
            android:id="@+id/pineduser_btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@drawable/selector_btn_reload"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/pineduser_btn_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_add" />

    <ListView
        android:id="@+id/pineduser_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent" />

</LinearLayout>